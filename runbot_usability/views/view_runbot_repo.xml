<odoo>

    <record id="view_runbot_repo_form" model="ir.ui.view">
        <field name="model">runbot.repo</field>
        <field name="inherit_id" ref="runbot.repo_form" />
        <field name="arch" type="xml">
            <field name="addons_paths" position="after">
                <group string="Extra information" col="4">
                    <field name="short_name"/>
                    <field name="path"/>
                    <field name="base"/>
                    <field name="get_ref_time"/>
                    <field name="repo_config_id"/>
                    <button type="object" name="clone" string="Clone"/>
                    <button type="object" name="update_git" string="Update Git"/>
                    <button type="object" name="update_git_force" string="Update Git (Force)"/>
                </group>
            </field>
        </field>
    </record>

</odoo>
